{
    "entry": ["./src/index.tsx"],
    "ignorePatterns": ["**/node_modules/**", "build/**"],
    "ignoreUnimported": ["**/*.d.ts", "**/*.test.*"],
    "ignoreUnused": [
        "@apollo/client",
        "@graphql-codegen/introspection",
        "@graphql-codegen/typescript-operations",
        "@togglecorp/re-map",
        "@sentry/react"
    ],
    "extensions": [".ts", ".js", ".tsx", ".jsx"],
    "aliases": {
        "#utils/*": ["./src/utils/*"],
        "#views/*": ["./src/views/*"]
    }
}
